<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <label>Title</label>
  <%= f.text_field :title, class: "Field" %>

  <label>Body</label>
  <%= f.text_area :body, class: "Field" %>

  <%= f.submit 'Update Book', class: "Button" %>

  <%= link_to "Show", book_path(@book), class: 'link' %>
   |
  <%= link_to "Back", "/books", class: 'link' %>

<% end %>